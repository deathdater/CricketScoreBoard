<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.cricketscoreboard">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/as_1409_512"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".views.LoadAppActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            //android:theme="@style/FullscreenTheme"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.LandingPageActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".views.TeamDetails"
            android:label="@string/app_name" />
        <activity
            android:name=".views.PlayerDetailsActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".views.GroundDetailsActivity"
            android:label="@string/app_name" />
        <activity android:name=".views.ScheduleMatches" />
        <activity
            android:name=".views.ViewTeams"
            android:label="@string/app_name" />
        <activity
            android:name=".views.ViewGrounds"
            android:label="@string/app_name" />
        <activity
            android:name=".views.ViewPlayers"
            android:label="@string/app_name" />
        <activity
            android:name=".views.ViewSchedules"
            android:label="@string/app_name" />
        <activity
            android:name=".views.ScorerTabActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.ScorerPadActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>